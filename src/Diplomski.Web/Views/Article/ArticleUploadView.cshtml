@model ArticleDbfFileUploadRequest

@{
    ViewData["Title"] = "Artikli Učitavanje";
}

<div class="row">
    <div class="col-lg-12">
        <form action="@Url.Action("Upload")" method="post" class="form-inline" id="articleUpload">

            <div id="div_id_dbf_file" class="form-group">
                <label>Ubacite datoteku</label>
                <input id"id_dbf_file" asp-for="DbfFile" class="dropzone"/>
            </div>

            <div id="div_id_stores" class="form-group topSpace">
                <label>Izaberite trgovine</label>
                <select asp-for="StoreId" asp-items="ViewBag.Stores" style="width:95%; margin:auto">
                </select>
            </div>

            <div class="d-flex flex-row centerElements">
                <label>Mjesec</label>
                <input id="id_buy_month_after" asp-for="DbfMonth" class="form-control" type="month" placeholder="Mjesec" style="text-align: center; width:70%; margin:5px" />
            </div>

            <button type="button" class="btn btn-success" id="confirmArticleUpload">Učitaj datoteku</button>
        </form>
    </div>
</div>

@section Scripts{
    <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />
}
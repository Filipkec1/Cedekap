@model ArticleShowRequest

<div style="margin-top: 20px" class="bg-white text-dark p-3 mb-3 text-center shadow-lg" id="id_article_sort">
    <form action="@Url.Action("Sort")" method="post" class="form-inline" id="articleSort">

        <div id="div_id_code_supplier" class="form-group">

            <label>Izlaz</label>
            <input asp-for="ExitShow" type="checkbox" id="id_exit" />

            <label>Cijena</label>
            <input asp-for="PriceShow" type="checkbox" id="id_price" />

            <label>Potražnja</label>
            <input asp-for="DemandShow" type="checkbox" id="id_demand">

            <label>Nabavna cijena</label>
            <input asp-for="BuyPriceShow" type="checkbox" id="id_buy_price" />

            <label>Pokazati</label>
            <input id="id_show" asp-for="Show" class="form-control" type="text" placeholder="Min" style="text-align: center; width:30%; margin:0px 5px" />
        </div>

        <button type="button" class="btn btn-success" id="confirmArticleSort">Sortiraj</button>
    </form>
</div>

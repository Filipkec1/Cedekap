@{
    ViewData["Title"] = "Artikli";
}

<div class="row">
    <div class="col-lg-3">
        <div style="margin-top: 20px" class="bg-white text-dark p-3 mb-3 text-center shadow-lg">
            <partial name="_ArticleFilter" model="new ArticleFilterRequest()" />
        </div>
    </div>

    <div class="col-lg-9">

        <div class="col-lg-12" id="id_article_sort_div">

        </div>

        <div class="col-lg-12" id="id_article_chart_div">

        </div>
    </div>

</div>


@section Scripts{
    <script>

        /**
         * When the page is ready make it possible to click the filter button.
         */
        $(document).ready(function () {
            $("#confirmArticleFilter").click(function () {

                $.ajax({
                    url: "@Url.Action("Filter")",
                    method: "POST",
                    data: $("#articleFilter").serializeArray(),
                    success: OnSuccessFilterResult
                    //error: OnErrorFilter
                });
            })
        });

        /**
         * When the filter button is clicked for the first time create the sort partial view.
         * On subsequent click do nothing.
         */
        function OnSuccessFilterResult(){

            if (! !!document.getElementById("id_article_sort")) {
            }
            var url = "@Url.Action("Sort")";
            $("#id_article_sort_div").load(url, null);
        }

        /**
         * Get the data from "#articleFilter" form and convert it to a json.
         * After that make AJAX call to show sorted Articles.
         */
        $("#id_article_sort_div").on("click", "#confirmArticleSort", function (event) {


            var sortData = ObjectifyForms();

            $.ajax({
                url: "@Url.Action("Sort")",
                data: sortData,
                method: 'POST',
                success: OnSuccessSortResult
            })
        });

        /**
         * Get object from serialize forms.
         */
        function ObjectifyForms() {

            var articleSortObject = $("#articleSort").serializeArray();
            var articleFilterObject = $("#articleFilter").serializeArray();

            var returnArray = {};
            for (var i = 0; i < articleSortObject.length; i++) {
                returnArray[articleSortObject[i]['name']] = articleSortObject[i]['value'];
            }

            for (var i = 0; i < articleFilterObject.length; i++) {
                returnArray[articleFilterObject[i]['name']] = articleFilterObject[i]['value'];
            }

            return returnArray;
        }

        /**
        * When the sort button is clicked for the first time create the chart partial view.
        * On subsequent redraw it.
        */
        function OnSuccessSortResult() {

            var url = "@Url.Action("Chart")";
            $("#id_article_chart_div").load(url, function () {
                const myChart = new Chart(
                    document.getElementById('myChart'),
                    config
                );
            });
        }

        const labels = [
            'January',
            'February',
            'March',
            'April',
            'May',
            'June',
        ];

        const data = {
            labels: labels,
            datasets: [{
                label: 'My First dataset',
                backgroundColor: 'rgb(255, 99, 132)',
                borderColor: 'rgb(255, 99, 132)',
                data: [0, 10, 5, 2, 20, 30, 45],
            }]
        };

        const config = {
            type: 'line',
            data: data,
            options: {}
        };

    </script>
}
